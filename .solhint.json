{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": "off",
    "not-rely-on-time": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "private-vars-leading-underscore": [
      "error",
      {
        "strict": false
      }
    ],
    "func-param-name-mixedcase": "error",
    "modifier-name-mixedcase": "error"
  }
}